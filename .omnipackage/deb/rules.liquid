#!/usr/bin/make -f
# debian.rules
# Be carefull, this is a Makefile, so the indents are tabs and not spaces!
# -*- makefile -*-

export DESTROOT=$(CURDIR)/debian/mpz
# export QT_SELECT={{ qt_select | default: "qt5" }}

{% if LDFLAGS %}
export LDFLAGS={{ LDFLAGS }}
{% endif %}
{% if CPPFLAGS %}
export CPPFLAGS={{ CPPFLAGS }}
{% endif %}

%:
	dh $@

override_dh_auto_install:
	cd build
	make install INSTALL_ROOT=$(DESTROOT)/usr

override_dh_auto_configure:
	cmake -DCMAKE_BUILD_TYPE=Release -DCMAKE_INSTALL_PREFIX=$(DESTROOT)/usr {{ CMAKE_EXTRA_CLI }} .
