#!/usr/bin/make -f
# debian.rules
# Be carefull, this is a Makefile, so the indents are tabs and not spaces!
# -*- makefile -*-

{% if LDFLAGS %}
export LDFLAGS={{ LDFLAGS }}
{% endif %}
{% if CPPFLAGS %}
export CPPFLAGS={{ CPPFLAGS }}
{% endif %}

%:
	dh $@

override_dh_auto_configure:
	cmake -DCMAKE_BUILD_TYPE=Release -DCMAKE_INSTALL_PREFIX=/usr -DCMAKE_POLICY_VERSION_MINIMUM=3.5 {{ CMAKE_EXTRA_CLI }}
